<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.indoortracking.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.indoortracking.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.indoortracking.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <activity
        android:id="@+id/imu_activity"
        android:name="com.example.indoortracking.tracking.imu.imu"
        android:label="imu"
        tools:layout="@layout/activity_imu"
    />

    <activity
        android:id="@+id/map_activity"
        android:name="com.example.indoortracking.tracking.map.map"
        android:label="map"
        tools:layout="@layout/activity_map"
    />

    <activity
        android:id="@+id/triangulation_activity"
        android:name="com.example.indoortracking.tracking.triangulation.triangulation"
        android:label="triangulation"
        tools:layout="@layout/activity_triangulation"
    />

    <activity
        android:id="@+id/wifi_activity"
        android:name="com.example.indoortracking.tracking.wifi.wifi"
        android:label="wifi"
        tools:layout="@layout/activity_wifi"
    />

</navigation>